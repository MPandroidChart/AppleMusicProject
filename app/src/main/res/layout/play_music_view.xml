<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--光盘部分-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_dic"
        android:layout_marginTop="90dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/disc"/>
        <!--CircleImageView-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            app:civ_border_width="2dp"
            android:id="@+id/music_bk_icon"
            app:civ_border_color="@android:color/black"></de.hdodenhof.circleimageview.CircleImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/play_music"
            android:id="@+id/iv_play_music"
            android:visibility="gone"
            android:layout_gravity="center"/>

    </FrameLayout>
    <!--指针部分-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/needle"
        android:id="@+id/play_needle"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25dp"/>

</FrameLayout>